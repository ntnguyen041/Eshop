@model Eshop.Models.Product
@inject IHttpContextAccessor Accessor
@{
    ViewData["Title"] = "Details";
    var stock = @Model.Stock;
    var ida = @Model.Id;

    var a = "Còn hàng";
    if (stock>0) a=a;
    else a = "Hết hàng";

    ///
    var id = Accessor.HttpContext.Session.GetInt32("id");
	if (id == null) id = -1;
	var oder = Accessor.HttpContext.Session.GetInt32("oder");
}
@section acs{
    <style>
 .carousel-indicators{
        height:92px;
    }
</style>
   
}

    <!--================Single Product Area =================-->
    <div class="product_image_area">
      <div class="container">
        <div class="row s_product_inner">
          <div class="col-lg-6">
            <div class="s_product_img px-auto" style="margin:0 auto;width:60%;padding-bottom:5%">
              <div
                id="carouselExampleIndicators"
                class="carousel slide"
                data-ride="carousel"
              >
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img
                      class="d-block w-100"
                      src="~/img/product/@Html.DisplayFor(model => model.Image)"
                      alt="First slide"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      class="d-block w-100"
                      src="~/img/product/@Html.DisplayFor(model => model.Image)"
                      alt="Second slide"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      class="d-block w-100"
                      src="~/img/product/@Html.DisplayFor(model => model.Image)"
                      alt="Third slide"
                    />
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="s_product_text">
              <h3> @Html.DisplayFor(model => model.Name)</h3>
              <h2>$@Html.DisplayFor(model => model.Price)</h2>
              <ul class="list">
                <li>
                  <a class="active" href="#">
                    <span>Category</span> : @Html.DisplayFor(model => model.ProductType.Name)</a
                  >
                </li>
                <li>
                  <a href="#"> <span>Availibility</span> : @a</a>
                </li>
              </ul>
              <p>
               @Html.DisplayFor(model => model.Description)
              </p>
             
              <div class="card_area">
                
               <a  class="main_btn" asp-controller="Carts" asp-action="addCreate" asp-route-AccountId="@id" asp-route-ProductId="@ida" asp-route-soluong="1" asp-route-Actionk="Detailitem">Add to Cart</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    @section jqeryajax{
	<script src="~/lib/vendors/jquery-ui/jquery-ui.js"></script>

}
