@model Product
@inject IHttpContextAccessor Accessor
@{
	var id = Accessor.HttpContext.Session.GetInt32("id");
	if (id == null) id = -1;
	var oder = Accessor.HttpContext.Session.GetInt32("oder");
}
<input type="hidden" value="@oder" id="oder"/>
<div class="col-lg-4 col-md-6">
    <div class="single-product">
        <div class="product-img">
            <img class="img-fluid w-100" src="~/img/product/@Model.Image" alt="" />
           <div class="p_icon">
											<a asp-controller="Products" asp-action="Detailitem" asp-route-id="@Model.Id">
												<i class="ti-eye"></i>
											</a>
											@if (@Model.Stock > 0)
											{
												<a asp-controller="Carts" asp-action="addCreate" asp-route-AccountId="@id" asp-route-ProductId="@Model.Id" asp-route-soluong="1" asp-route-Actionk="Homeindex">
												<i class="ti-shopping-cart"></i>
											</a>
											}
											@if (@Model.Stock <= 0)
											{
												<a style="background-color:beige;">
												<i class="ti-shopping-cart"></i>
												</a>
												
											}

										</div>
        </div>
        <div class="product-btm">
            <a href="#" class="d-block">
                <h4>@Model.Name</h4>
            </a>
            <div class="mt-3">
                <span class="mr-4">@Model.Price VND</span>
                <del>@Model.Price VND</del>
            </div>
        </div>
    </div>
</div>
